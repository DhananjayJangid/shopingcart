      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :product_name %>
    <%= form.text_field :product_name, class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label :product_category %>
    <%= form.text_field :product_category, class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label :product_price %>
    <%= form.number_field :product_price, class: 'form-control' %>
